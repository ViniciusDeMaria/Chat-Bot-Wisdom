{
  "compilerOptions": {
    "target": "ES6",                     // Versão do JavaScript gerado (ES6, ES2015, etc.)
    "module": "CommonJS",                // Sistema de módulos (CommonJS para Node.js)
    "outDir": "./dist",                  // Diretório onde o JavaScript gerado será salvo
    "rootDir": "./src",                  // Diretório raiz do código TypeScript
    "strict": true,                      // Habilita todas as verificações de tipo estritas
    "esModuleInterop": false,             // Permite importar módulos ES6
    "skipLibCheck": true,                // Ignora checagens em arquivos de definição de bibliotecas
    "forceConsistentCasingInFileNames": true, // Força consistência de maiúsculas/minúsculas no nome dos arquivos
    "sourceMap": true,                   //Gera mapas de origem para depuração.
  },
  "include": ["src/**/*", "env.d.ts"],               // Inclui os arquivos da pasta "src"
  "exclude": ["node_modules"]            // Exclui a pasta "node_modules"
}
